<Functions@BoxLayout>:
   orientation: "horizontal"
   size_hint: 1, .08
   pos_hint: {"x": 0, "y": 0}
#   background_color:  .7, .9, .4, 1


   Randomize:

   Button:
      id: start
      text: "PLAY"
      font_size: .9*self.height
      text_size: None, self.height - .225*self.height
      font_name: "rheiborn.ttf"
      background_color:  .7, .9, .4, 1
      background_normal: ""
      background_down: ""
      on_press: root.TimerOn()


   Button:
      id: add_player
      text: "+"
      size_hint_x: .5
      font_size: 1.1*self.height
      #font_name: "rheiborn.ttf"
      background_color:  .7, .9, .4, 1
      background_normal: ""
      background_down: ""
      on_press: root.NewPlayerWindow()
      on_press: root.White(2)
      on_press: root.Green(2)


<Randomize@FloatLayout>:
#   background_color:  .7, .9, .4, 1
   size_hint: .5, 1
   canvas:
      Color:
         rgb: .7, .9, .4, 1
      Rectangle:
         size: self.size
   Button:
      id: randomize
      size_hint: None, None
      size: root.height * 1.3 - .3*root.height, root.height - .3*root.height
      pos_hint: {"center_x": .5, "center_y": .5}
      padding: 20, 20
      background_color:  1, 1, 1, 1
      background_normal: "random.png"  #created by useiconic.com from noun project
      background_down: "random_d.png"
      border: 0, 0, 0, 0
      on_press: root.Randomize()
      on_press: root.White()
      on_release: root.Green()

<Timer@Button>
   background_normal: ""
   background_color: 1, 1, 1, 0
   size_hint: 1, .15
   pos_hint: {"x": 0, "top": .92}
   text: root.StartTime()
   font_size: .8*self.height
   color: .7, .9, .4, 1
   on_press: root.NewTimeWindow()
   canvas.before:
      Color:
         rgba: .7, .9, .4, 1
      Line:
         points: self.x + .18*self.width, self.y, self.width - .18*self.width, self.y
         width: 2


<Bt@Button>:
#   on_press: root.RemovePlayer()
   background_color: .99, .99, .99, 1.
   background_normal: ""
   background_down: ""
   color: .7, .9, .4, 1
   size_hint: 1, 1
#   font_size: 18
   font_size: "18sp"
   canvas.after:
      Color:
         rgba: .7, .9, .4, 1
      Line:
         points: self.x, self.y + 1, self.width, self.y + 1
         width: 1

<BtReady@Bt>:
   on_press: root.RemovePlayer()
   background_color: .7, .9, .4, .5

<BtDelete@Bt>:
   text: "X"
   color: 1, 0, 0, 1
#   font_size: 30
   on_press: root.Del()
   font_name: "rheiborn.ttf"



