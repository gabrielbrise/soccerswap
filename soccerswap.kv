<RootWidget>:
   orientation: "vertical"
   FloatLayout:
      id: tela1
      Timer:
         id: clock
      Button:
         size_hint: 1.0, .08
         pos_hint: {"center_x": .5, "y": .92}
         text: "SOCCER SWAP"
         padding: 0, 0
#         font_size: 40
         font_size: self.height
         text_size: None, self.height - .125*self.height
         font_name: "rheiborn.ttf"
         background_color:  .7, .9, .4, 1
         background_normal: ""
         background_down: ""

      Options:

      Functions:
         id: func

      PlayerList:
         id: player_list


<PlayerCarousel@Carousel>:
   BtDelete:

<Options@FloatLayout>:
   size_hint: .08, .08
   pos_hint: {"right": .98, "top": 1}
#   canvas:
#      Color:
#         rgb: .7, .9, .4, 1
#      Rectangle:
#         size: self.size
   Button:
      id: options
      size_hint: None, None
      size: root.height, root.height
      pos_hint: {"center_x": .5, "center_y": .5}
      #padding: 20, 20
#      background_color:  1, 1, 1, 1
      background_normal: "options.png"
      background_down: "options_d.png"
      on_press: root.White(0)
      on_release: root.Green(0)
      border: 0, 0, 0, 0

<PlayerInput@FloatLayout>:
   id: player_input
   size_hint: .8, .2
   pos_hint: {"center_x": .5, "center_y": .5}

   canvas:
      Color:
         rgb: .7, .9, .4, 1
#      Line:
#         points: self.x, self.y, self.x , self.height, self.width, self.height, self.width, self.y, self.x, self.y
#         width: 1

   BoxLayout:
      pos_hint: {"center_x": .5, "center_y": .5}
      orientation: "vertical"
      TextInput:
         id: player_name_input
         font_size: .3*self.height
         background_normal: ""
         background_color: .7, .9, .4, .5

      BoxLayout:
         size_hint: 1, .5
         orientation: "horizontal"
         Button:
            text: "Cancelar"
            on_press: root.RemoveWindow()
            background_normal: ""
            font_size: .5*self.height
            background_color: .7, .9, .4, .3
            color: 1, .1, .1, 1
         Button:
            text: "OK"
            on_press: root.AddPlayer()
            background_normal: ""
            font_size: .8*self.height
            bold: True
            background_color: .7, .9, .4, .3
            color: .7, .9, .4, 1

<TimerInput@FloatLayout>:
   id: timer_input
   size_hint: .8, .2
   pos_hint: {"center_x": .5, "center_y": .5}
   BoxLayout:
      pos_hint: {"center_x": .5, "center_y": .5}
      orientation: "vertical"
      TextInput:
         id: timer_seconds_input
         input_type: "number"
         font_size: .3*self.height
         color: 0, 0, 0, 1
         background_normal: ""
         background_color: .7, .9, .4, .5

      BoxLayout:
         size_hint: 1, .5
         orientation: "horizontal"
         Button:
            text: "Cancelar"
            on_press: root.RemoveWindow()
            font_size: .5*self.height
            background_normal: ""
            background_color: .7, .9, .4, .3
            color: 1, .1, .1, 1
         Button:
            text: "OK"
            on_press: root.NewTime()
            background_normal: ""
#            font_size: 24
            font_size: .8*self.height
            bold: True
            background_color: .7, .9, .4, .3
            color: .7, .9, .4, 1

